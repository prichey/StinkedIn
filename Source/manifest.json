{
  "manifest_version": 2,
  "name": "They LinkedIn",
  "version": "1.0",
  "description":
    "Lets you see through the LinkedIn jargon. Inspired by John Carpenter's They Live.",
  "permissions": ["*://*.linkedin.com/*", "webRequest"],
  "icons": { "16": "logo-16.png", "128": "logo-128.png" },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
